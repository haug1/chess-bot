{
  "manifest_version": 2,
  "name": "Chessbot",
  "description": "A firefox extension that shows the best moves provided by the backend.",
  "version": "1.0.0",

  "content_scripts": [
    {
      "matches": ["https://www.chess.com/play/computer"],
      "js": ["bin/chess.min.js", "main.js"]
    }
  ],

  "permissions": ["activeTab", "*://localhost/*"]
}
